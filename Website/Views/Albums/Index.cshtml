@model IEnumerable<Website.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
                <h3 class="content-header-title mb-0 d-inline-block">About Details</h3>
                <div class="row breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">Create, Read & Delete</a>
                            </li>
                            <li class="breadcrumb-item active">
                                About Details
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!--Grid options-->
            <section id="grid-options" class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">About Details</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <p>
                                    <button type="submit" class="btn btn-warning"  onclick="location.href='@Url.Action("Create", "Albums")'">
                                        Create
                                    </button>
                                </p>

                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Album_Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Album_Image_Url)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Album_Name)
                                            </td>
                                            <td>
                                                <img src="@Html.DisplayFor(modelItem => item.Album_Image_Url)" width="50" height="50" />
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Album_Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Album_Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Album_Id })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--Auto-layout columns-->


        </div>
    </div>
</div>

